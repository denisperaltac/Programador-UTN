<div
  style=" margin: 20px 20px 0px 0px;
    justify-content: end;
    display: flex !important;"
>

</div>
<div class="container" style="margin:50px auto">
  <div class="row">

    <h1 class="text-right col-10" style="color: black;">Hola
      {{usuario}}</h1>
    <a
      href="/admin/login"
      class="btn btn-sm btn-danger col-2"
      style="display:flex;  align-items: center; width:auto; height:fit-content; font-size:1rem; font-weight:500"
    >Cerrar sesión</i></a>

    <p class="text-right" style="color: black;">Rol: admin</p>
  </div>
  <div class="row bg-white mt-5">
    <div class="col-7">
      <h3>Listado de Novedades</h3>
    </div>
     <div class="col-2 d-flex align-items-center">
      <form class="form-inline" action="/admin/novedades" method="get">
      <input class="form-control" type="search" placeholder="Buscar" aria-label="Search" name="q" {{#if q}} value="{{q}}" {{/if}}>
       </div>
       <div class="col-1 d-flex align-items-center">
        <i class="fa fa-search mb-3" aria-hidden="true"></i>
      <button class="btn btn-secundary my-2 my-sm-0" type="submit">
      </button>
      </form>
</div>
    <div class="col-2 d-flex align-items-center mb-3">
      <a href="/admin/novedades/agregar" class="btn btn-success">
        <i class="fa-solid fa-plus"></i></a>
    </div>
       
    
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="col-8">Título</th>
        <th scope="col" class="col-2">Imagenes</th>
        <th scope="col" class="col-2">Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each novedades}}
        <tr>

          <td>{{titulo}}</td>
          <td>{{{imagen}}}</td>
          <td><a
              href="/admin/novedades/editar/{{id}}"
              class="btn btn-secondary"
            ><i class="fa-solid fa-pen-to-square"></i></a>
            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-danger">
              <i class="fa-solid fa-trash"></i>
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  {{#if is_search}}
  {{#unless novedades.length}}
  No se encontraron resultados para "<b>{{q}}</b>"
  {{/unless}}
  {{/if}}
</div>