<div class="container bg-white" id="logIn">
    <div class="row">
        <div class="col">
            <form action="/admin/login" method="post">
            <div class="form-group">
                <label class="mb-2 fs-5" for="usuario">Ingrese su usuario</label>
                <input type="text" class="form-control" placeholder="Usuario" name="usuario">
            </div>
            <div class="form-group mt-4">
                <label class="mb-2 fs-5" for="password">Ingrese su contrase√±a</label>
                <input type="password" class="form-control" placeholder="Password" name="password">
            </div>
            <button type="submit" class="btn btn-primary mt-4">Entrar</button>
            </form>
            {{#if error}}
                <p id="messageError">Usuario o clave incorrecto.</p>
            {{/if}}
        </div>
    </div>
</div>