<div class="container bg-white mt-5" id="logIn" style="margin-left:200px">
  <div class="row">
    <div class="col col-sm-10 col-md-6">
      <form action="/admin/login" method="post">
        <div class="form-group">
          <label class="mb-2 fs-5" for="usuario">Ingrese su usuario</label>
          <input
            type="text"
            class="form-control"
            placeholder="Usuario"
            name="usuario"
          />
        </div>
        <div class="form-group mt-4 mb-4">
          <label class="mb-2 fs-5" for="password">Ingrese su contrase√±a</label>
          <input
            type="password"
            class="form-control"
            placeholder="Password"
            name="password"
          />
        </div>
        <div>
          {{#if error}}
            <p id="messageError">Usuario o clave incorrecto.</p>
          {{/if}}
        </div>
        <button type="submit" class="btn btn-primary">Entrar</button>
        <a href="/" class="btn btn-danger">Regresar</a>
      </form>

    </div>
  </div>
</div>